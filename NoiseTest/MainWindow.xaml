<Window x:Class="NoiseTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoiseTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid Height="800">
        <!--<Canvas x:Name="MapCanvas" HorizontalAlignment="Left" Height="500" Margin="10,10,0,0" VerticalAlignment="Top" Width="500"/>-->
        <Button x:Name="SeedRoll" Content="New Seed" HorizontalAlignment="Left" Margin="707,10,0,0" VerticalAlignment="Top" Width="75" Click="SeedRoll_Click"/>
        <Grid Margin="545,109,10,425">
            <Slider x:Name ="Wasserlevel" Margin="0,26,0,0" VerticalAlignment="Top" Width="237" ValueChanged="Wasserlevel_ValueChanged" Thumb.DragCompleted="Wasserlevel_DragCompleted" Maximum="255" HorizontalAlignment="Center"/>
            <TextBox x:Name ="wl" Height="23" Margin="0,49,0,0" TextWrapping="Wrap" Text ="0" VerticalAlignment="Top" Width="120" IsReadOnlyCaretVisible="True" KeyDown="Wl_KeyDown" HorizontalAlignment="Center"/>
            <Label Content="Wasserlevel" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="87" HorizontalAlignment="Center"/>
            <Label Content="Skalierung" HorizontalAlignment="Center" Margin="82,88,83,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="0.512,0.5" HorizontalContentAlignment="Center"/>
            <Slider x:Name="Skalierungslevel" HorizontalAlignment="Center" Margin="-4,119,0,0" VerticalAlignment="Top" Width="241"/>
        </Grid>
        <Image x:Name="mapView" HorizontalAlignment="Left" Height="500" Margin="10,10,0,0" VerticalAlignment="Top" Width="500"/>
    </Grid>
</Window>
